generator client {
  provider = "dart run orm"
  output = "../lib/src/generated"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")

}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  botiquin Botiquin?
}

model Botiquin {
  id        String   @id @default(cuid())
  nombre    String
  medicamentos Medicamento[]
  user      User     @relation(fields: [userId], references: [id])
  userId    String  @unique
}

model Medicamento {
  id        String   @id @default(cuid())
  nombre    String
  fechaVencimiento  DateTime
  cantidad  Int
  SKU       String @unique
  botiquin  Botiquin @relation(fields: [botiquinId], references: [id])
  botiquinId String
}