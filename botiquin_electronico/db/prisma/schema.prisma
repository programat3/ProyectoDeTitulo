generator client {
  provider = "dart run orm"
}

datasource db {
  provider = "postgresql"
  url      = "postgresql://postgres:TrabajoDeTitulo2024@localhost:5432/trabajodetitulo?schema=public"
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  password  String
  botiquin Botiquin?
}

model Botiquin {
  id        String   @id @default(cuid())
  nombre    String
  medicamentos Medicamento[]
  user      User     @relation(fields: [userId], references: [id])
  userId    String  @unique
}

model Medicamento {
  id        String   @id @default(cuid())
  nombre    String
  cantidad  Int
  botiquin  Botiquin @relation(fields: [botiquinId], references: [id])
  botiquinId String
}